<h2><%=@clothing.title%></h2>
<h3><%=@clothing.description%></h3>
<h3>Original Cost: $<%=@clothing.cost%>.00</h3>
<% @clothing.photos.each do |photo| %>
  <% if photo.image? %>
  <%= image_tag(photo.image)%>
  <%end%>
<%end%>


<%= form_for [@clothing, @photo], :html => { :class =>
  'file-uploads form-horizontal' } do |f| %>
  <%= f.label :Image %>
  <%= f.file_field :image %>
  <%= f.hidden_field :clothing_type, :value =>@clothing.type %>
  <%= f.hidden_field :clothing_id, :value =>@clothing.id %>
  <%= f.label :Description %>
  <%= f.text_field :description, rows:"10" %>
  <%= f.submit class: "btn btn-default upload-button"%>
  <% end %>
